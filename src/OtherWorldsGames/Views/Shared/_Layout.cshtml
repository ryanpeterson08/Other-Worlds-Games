<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Other Worlds Games</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Store", "Index", "Products")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>  
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("Calendar", "Calendar", "Home")</li>  
                <li>@Html.ActionLink("Testimonials", "Testimonials", "Home")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
               <li><a href="https://www.facebook.com/OtherWorldsGames"><i class="fa fa-facebook-square fa-lg"></i></a></li>
                <li><a><i class="fa fa-rss-square fa-lg"></i></a></li>
                <li><a><i class="fa fa-envelope fa-lg"></i></a></li>
            </ul>
        </div>
    </nav>
    <div class="container text-center">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <p class="footer-text">&copy; OtherWorldsGames 2017</p>
        </div>
    </footer>
</body>
</html>
